{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "commonjs",
      "target": "es6",
      "lib": ["es2017", "dom"],
      "declaration": false,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  